{
    "display": "Node 16",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "es6",
        "target": "es2021",
        "lib": ["es2021"],

        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false,
        "allowJs": false
    },
    "include": ["src/**/*"]
}